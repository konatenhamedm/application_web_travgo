        <div class="col-lg-2">{{form_row(client.origine)}}</div>
        <div class="col-lg-10">{{form_row(client.civilite)}}</div>
    </div>
    <div class="form-group row">
        <div class="col-lg-4">{{form_row(client.activite)}}</div>
        <div class="col-lg-5">{{form_row(client.secteurActivite)}}</div>
        <div class="col-lg-3">{{form_row(client.capital)}}</div>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">{{form_row(client.commune)}}</div>
        <div class="col-lg-2">{{form_row(client.adresse)}}</div>
    </div>
    <div class="form-group row">
        <div class="col-lg-2">{{form_row(client.email)}}</div>
        <div class="col-lg-10">{{form_row(client.telephone)}}</div>
    </div>
    <div class="form-group row">
        {# <div class="col-lg-12">{{_self.contact(client.contacts.vars)}}</div> #}
    </div>
    <div class="form-group row">
        <div class="col-lg-2">{{form_row(client.regimeImpot)}}</div>
        <div class="col-lg-2">{{form_row(client.centreImpot)}}</div>
    </div>
